<section class="pf2e-general-store-dialog">
  <header class="store-controls">
    <h1 class="store-title">Willkommen bei Abadar Prime. First Vault Qualität direkt für Euren Rucksack.</h1>
    <div class="store-controls__row">
      <div class="store-filters">
        <label class="store-option">
          <input type="checkbox" name="filter-spell" />
          <span>Spell</span>
        </label>
        <label class="store-option">
          <input type="checkbox" name="filter-item" />
          <span>Item</span>
        </label>
      </div>
      <div class="store-search">
        <input type="search" name="store-search" placeholder="Suchen..." />
        <p class="store-search__hint">
          <span class="store-search__hint-text">Mindestens 2 Zeichen für die Suche.</span>
          <span class="store-search__hint-note" data-search-hint></span>
        </p>
      </div>
      <div class="store-cart">
        <button class="store-cart__add" type="button">
          <i class="fas fa-shopping-cart" aria-hidden="true"></i>
          In den Einkaufskorb
        </button>
        <button class="store-wishlist__add" type="button">
          <i class="fas fa-heart" aria-hidden="true"></i>
          Auf Wunschliste
        </button>
        <button class="store-cart__view" type="button">
          Einkaufskorb anzeigen
        </button>
        <button class="store-wishlist__view" type="button">
          Wunschliste anzeigen
        </button>
        <span class="store-cart__summary">
          Warenkorb: <span class="store-cart__total" data-cart-total>0 gp</span>
        </span>
      </div>
      <div class="store-availability">
        <span class="store-availability__label">Verfügbar</span>
        <span class="store-availability__actor">
          {{#if actorTokenSrc}}
            <img
              class="store-availability__actor-token"
              src="{{actorTokenSrc}}"
              alt="{{actorName}}"
            />
          {{/if}}
          <span class="store-availability__actor-name">{{actorName}}</span>
          {{#if actorGold}}
            {{actorGold}}
          {{else}}
            Nicht verfügbar
          {{/if}}
        </span>
        <span class="store-availability__separator">·</span>
        {{#if partyGold}}
          <span class="store-availability__party">
            <i class="fas fa-users store-availability__icon" aria-hidden="true"></i>
            Party-Stash {{partyGold}}
          </span>
        {{else}}
          <span class="store-availability__party">
            <i class="fas fa-users store-availability__icon" aria-hidden="true"></i>
            Party-Stash: Nicht verfügbar
          </span>
        {{/if}}
      </div>
    </div>
  </header>

  <div class="store-main store-body">
    <div class="store-results">
      <ul>
        <li class="placeholder">Keine Ergebnisse.</li>
      </ul>
    </div>
    <section class="store-description">
      <div class="store-description__content">
        <p class="store-description__placeholder">
          Wähle ein Item aus, um die Beschreibung zu sehen.
        </p>
      </div>
    </section>
  </div>

</section>
