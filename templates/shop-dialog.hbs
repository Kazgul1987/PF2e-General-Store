<section class="pf2e-general-store-dialog">
  <header class="store-controls">
    <div class="store-filters">
      <label class="store-option">
        <input type="checkbox" name="filter-spell" />
        <span>Spell</span>
      </label>
      <label class="store-option">
        <input type="checkbox" name="filter-item" />
        <span>Item</span>
      </label>
    </div>
    <div class="store-search">
      <input type="search" name="store-search" placeholder="Suchen..." />
    </div>
  </header>

  <div class="store-results">
    <ul>
      <li class="placeholder">Keine Ergebnisse.</li>
    </ul>
  </div>

  <section class="bulk-order is-hidden" data-bulk-order>
    <div class="bulk-order__header">
      <strong>Sammelbestellung</strong>
      <span class="bulk-order__status">Noch nicht bestätigt</span>
    </div>
    <ul class="bulk-order__items"></ul>
    <div class="bulk-order__footer">
      <span class="bulk-order__total">0 gp</span>
      <button class="bulk-order__confirm" type="button">Bestätigen</button>
    </div>
  </section>
</section>
